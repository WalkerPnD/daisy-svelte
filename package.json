{
    "name": "daisy-svelte",
    "type": "module",
    "version": "0.0.28",
    "scripts": {
        "publish:patch": "npm version patch && npm run publish:package",
        "publish:package": "npm run package && ( cd package && npm publish)",
        "build": "vite build",
        "build:storybook": "build-storybook -o docs-build",
        "tailwind:watch": "cross-env TAILWIND_MODE=watch cross-env NODE_ENV=development  postcss src/styles/tailwind.css -o static/app.css -w",
        "tailwind:build": "cross-env TAILWIND_MODE=build cross-env NODE_ENV=production  postcss src/styles/tailwind.css -o static/app.css",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
        "chromatic": "chromatic --exit-zero-on-changes",
        "cy:open": "cypress open",
        "cy:run": "cypress run",
        "dev": "vite dev",
        "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
        "lint": "eslint --ignore-path .gitignore .",
        "package": "svelte-kit package",
        "prepare": "svelte-kit sync",
        "preview": "svelte-kit preview",
        "storybook": "start-storybook -p 6006",
        "test": "start-server-and-test storybook http://localhost:6006 cy:run"
    },
    "author": {
        "email": "stylethewalker@gmail.com",
        "name": "Marcio Koji Carvalho",
        "url": "https://walker-walks.github.io/daisy-svelte/"
    },
    "homepage": "https://walker-walks.github.io/daisy-svelte/",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/walker-walks/daisy-svelte.git"
    },
    "devDependencies": {
      "@babel/core": "^7.18.13",
      "@playwright/test": "^1.25.0",
      "@storybook/addon-actions": "^6.5.10",
      "@storybook/addon-essentials": "^6.5.10",
      "@storybook/addon-interactions": "^6.5.10",
      "@storybook/addon-links": "^6.5.10",
      "@storybook/addon-postcss": "^2.0.0",
      "@storybook/addon-storysource": "^6.5.10",
      "@storybook/addon-svelte-csf": "^2.0.7",
      "@storybook/builder-vite": "^0.2.2",
      "@storybook/svelte": "^6.5.10",
      "@storybook/testing-library": "^0.0.13",
      "@sveltejs/adapter-auto": "next",
        "@sveltejs/kit": "next",
        "@testing-library/cypress": "8.0.3",
        "@typescript-eslint/eslint-plugin": "5.30.5",
        "@typescript-eslint/parser": "5.30.5",
        "autoprefixer": "^10.4.7",
        "babel-loader": "8.2.5",
        "chromatic": "6.7.0",
        "concurrently": "^7.3.0",
        "cypress": "9.7.0",
        "daisyui": "^2.18.1",
        "eslint": "8.19.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-cypress": "2.12.1",
        "eslint-plugin-svelte3": "4.0.0",
        "husky": "8.0.1",
        "i": "^0.3.7",
        "lint-staged": "13.0.3",
        "npm": "^8.13.2",
        "postcss": "^8.4.14",
        "postcss-nesting": "^10.1.10",
        "prettier": "^2.7.1",
        "prettier-plugin-svelte": "^2.7.0",
        "storybook-addon-themes": "^6.1.0",
        "svelte": "^3.49.0",
        "svelte-check": "2.8.0",
        "svelte-loader": "3.1.3",
        "svelte-preprocess": "4.10.7",
        "tailwindcss": "^3.1.5",
        "tslib": "2.4.0",
        "typescript": "4.7.4",
        "vite": "^3.0.8"
    },
    "lint-staged": {
        "*.{js, ts, svelte}": [
            "eslint --fix"
        ],
        "*.{svelte, html, css, scss, stylus, js, ts, json, yml, yaml, md}": [
            "prettier --write --plugin-search-dir=."
        ]
    }
}
