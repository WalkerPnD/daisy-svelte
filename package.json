{
    "name": "daisy-svelte",
    "type": "module",
    "version": "0.0.17",
    "scripts": {
        "publish:patch": "npm version patch && npm run publish:package",
        "publish:package": "npm run package && ( cd package && npm publish)",
        "build": "svelte-kit build",
        "build:storybook": "build-storybook -o docs-build",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
        "chromatic": "chromatic --exit-zero-on-changes",
        "cy:open": "cypress open",
        "cy:run": "cypress run",
        "dev": "svelte-kit dev",
        "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
        "lint": "eslint --ignore-path .gitignore .",
        "package": "svelte-kit package",
        "prepare": "svelte-kit sync",
        "preview": "svelte-kit preview",
        "storybook": "start-storybook -p 6006",
        "test": "start-server-and-test storybook http://localhost:6006 cy:run"
    },
    "author": {
        "email": "stylethewalker@gmail.com",
        "name": "Marcio Koji Carvalho",
        "url": "https://walker-walks.github.io/daisy-svelte/"
    },
    "homepage": "https://walker-walks.github.io/daisy-svelte/",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/walker-walks/daisy-svelte.git"
    },
    "devDependencies": {
        "@babel/core": "7.18.6",
        "@babel/preset-env": "7.18.6",
        "@mdx-js/react": "^2.1.2",
        "@storybook/addon-actions": "6.5.9",
        "@storybook/addon-essentials": "6.5.9",
        "@storybook/addon-links": "6.5.9",
        "@storybook/addon-postcss": "^2.0.0",
        "@storybook/addon-storyshots": "6.5.9",
        "@storybook/addon-storysource": "^6.5.9",
        "@storybook/addon-svelte-csf": "2.0.4",
        "@storybook/svelte": "6.5.9",
        "@sveltejs/kit": "next",
        "@testing-library/cypress": "8.0.3",
        "@typescript-eslint/eslint-plugin": "5.30.5",
        "@typescript-eslint/parser": "5.30.5",
        "autoprefixer": "^10.4.7",
        "babel-loader": "8.2.5",
        "chromatic": "6.7.0",
        "cypress": "9.7.0",
        "daisyui": "^2.18.1",
        "eslint": "8.19.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-cypress": "2.12.1",
        "eslint-plugin-svelte3": "4.0.0",
        "husky": "8.0.1",
        "i": "^0.3.7",
        "lint-staged": "13.0.3",
        "npm": "^8.13.2",
        "postcss": "^8.4.14",
        "prettier": "^2.7.1",
        "prettier-plugin-svelte": "^2.7.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "start-server-and-test": "1.14.0",
        "storybook-addon-themes": "^6.1.0",
        "svelte": "3.48.0",
        "svelte-check": "2.8.0",
        "svelte-loader": "3.1.3",
        "svelte-preprocess": "4.10.7",
        "svelte2tsx": "0.5.11",
        "tailwindcss": "^3.1.4",
        "tslib": "2.4.0",
        "typescript": "4.7.4"
    },
    "lint-staged": {
        "*.{js, ts, svelte}": [
            "eslint --fix"
        ],
        "*.{svelte, html, css, scss, stylus, js, ts, json, yml, yaml, md}": [
            "prettier --write --plugin-search-dir=."
        ]
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4,
        "useTabs": true
    }
}
